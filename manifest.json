{
  "manifest_version": 3,
  "name": "MotCuaTool by Duy Phuoc",
  "version": "1.0.0",
  "description": "Tự động sinh mã hồ sơ theo MOD, tránh trùng ID và hỗ trợ tự xử lý khi trùng.",
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://motcua.mod.gov.vn/web/mot-cua-bo-quoc-phong/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
  "resources": ["injected.js"],
  "matches": ["https://motcua.mod.gov.vn/*"]
  }],
  "options_page": "options.html",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
